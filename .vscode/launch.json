{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-albumica",
            "program": "${workspaceFolder}/src/albumica/bin/Debug/net7.0/albumica.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/albumica",
            "stopAtEntry": false,
            // "serverReadyAction": {
            //     "action": "openExternally",
            //     "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            // },
            "envFile": "${workspaceFolder}/src/albumica/.env",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://+:5443;http://+:5080"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}